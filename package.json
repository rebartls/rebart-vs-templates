{
	"name": "vs-templates",
	"description": "",
	"version": "1.0.0",
	"publisher": "rebart",
	"license": "MIT",
	"main": "out/extension.js",
	"repository": {
		"url": "http://rebart-portainer:3000/rebart/vscode-templates"
	},
	"engines": {
		"vscode": "^1.98.0"
	},
	"scripts": {
		"clear": "rimraf node_modules dist out",
		"build": "tsx ./scripts/runner/build",
		"package": "vsce package --no-dependencies"
	},
	"devDependencies": {
		"@eslint/js": "^9.21.0",
		"@types/jest": "^29.5.3",
		"@types/node": "^20.4.1",
		"@types/vscode": "^1.98.0",
		"@types/yargs": "^17.0.35",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1",
		"@vscode/vsce": "^3.3.2",
		"esbuild": "^0.25.1",
		"eslint": "^9.21.0",
		"jest": "^29.6.1",
		"prettier": "^3.5.3",
		"rimraf": "^6.0.1",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.2",
		"tsx": "^4.10.4",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.8.1",
		"yargs": "^18.0.0"
	},
	"categories": [
		"Other",
		"Snippets"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"contributes": {
		"configuration": {
			"title": "Rebart Vscode Templates",
			"properties": {
				"rebart.vs-templates.paths": {
					"type": "array",
					"description": "Paths where the templates are defined."
				},
				"rebart.vs-templates.scriptPaths": {
					"type": "array",
					"description": "Paths where the scripts are defined. Only typescript or javascript files without any external dependencies are allowed."
				},
				"rebart.vs-templates.profiles": {
					"type": "array",
					"description": "Profiles to use. Uses every available profile if not provided."
				}
			}
		},
		"commands": [
			{
				"command": "rebart.vs-templates.c#.dto",
				"title": "Data Transfer Object"
			},
			{
				"command": "rebart.vs-templates.template.configuration",
				"title": "Create new template configuration"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"group": "navigation@-1",
					"when": "explorerResourceIsFolder",
					"submenu": "templates"
				},
				{
					"group": "navigation@-1",
					"when": "explorerResourceIsFolder",
					"submenu": "c#-templates"
				},
				{
					"command": "rebart.vs-templates.template.configuration",
					"group": "2_workspace",
					"when": "explorerResourceIsFolder"
				}
			],
			"templates": [],
			"c#-templates": [
				{
					"command": "rebart.vs-templates.c#.dto",
					"group": "navigation"
				}
			]
		},
		"submenus": [
			{
				"id": "templates",
				"label": "Default Templates"
			},
			{
				"id": "c#-templates",
				"label": "C# Templates"
			}
		]
	}
}
