{
	"$schema": "http://json-schema.org/draft-07/schema",
	"type": "object",
	"required": ["name", "title", "steps"],
	"definitions": {
		"name": {
			"type": "string",
			"description": "Name of the template."
		},
		"title": {
			"type": "string",
			"description": "Title of the template visible to the user."
		},
		"profile": {
			"type": "string",
			"description": "Name of the profile of the template."
		},
		"steps": {
			"type": "array",
			"description": "Steps to create and modify the template.",
			"items": {
				"type": "object",
				"additionalProperties": false,
				"properties": {
					"inputs": {
						"type": "array",
						"items": {
							"$ref": "#/definitions/input"
						}
					},
					"values": {
						"type": "array",
						"items": {
							"$ref": "#/definitions/value"
						}
					},
					"outputs": {
						"type": "array",
						"items": {
							"$ref": "#/definitions/output"
						}
					}
				}
			}
		},
		"input": {
			"type": "object",
			"required": ["type", "question", "name"],
			"additionalProperties": false,
			"properties": {
				"type": {
					"type": "string",
					"examples": ["text", "number", "select", "bool"]
				},
				"question": {
					"type": "string",
					"description": "Question to ask the user."
				},
				"name": {
					"type": "string",
					"description": "Name of the variable which will be available in the following steps."
				},
				"format": {
					"type": "string",
					"examples": ["c#", "path", "pascalCase", "camelCase"]
				},
				"values": {
					"type": "array",
					"description": "Values to select from (only used in type 'select')"
				},
				"optional": {
					"type": "boolean",
					"description": "If false no error will be thrown if the user doesn't provide any value; otherwise ignores the input. Default is false."
				}
			}
		},
		"value": {
			"type": "object",
			"required": ["name"],
			"additionalProperties": false,
			"properties": {
				"name": {
					"type": "string",
					"description": "Name of the variable which will be available in the following steps."
				},
				"value": {
					"type": "string",
					"description": "Static value of the item. Can be constructed with the available variables."
				},
				"format": {
					"type": "string",
					"examples": ["path", "pascalCase", "camelCase"]
				}
			}
		},
		"output": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"folder": {
					"type": "string",
					"description": "Name of the folder where the output will be created."
				},
				"files": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/outputFile"
					}
				},
				"name": {
					"type": "string",
					"description": "Name of the output file."
				},
				"file": {
					"type": "string",
					"description": "Name of the file where the data is located."
				}
			}
		},
		"outputFile": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"name": {
					"type": "string",
					"description": "Name of the output file."
				},
				"file": {
					"type": "string",
					"description": "Name of the file where the data is located."
				}
			}
		}
	},
	"properties": {
		"name": { "$ref": "#/definitions/name" },
		"title": { "$ref": "#/definitions/title" },
		"profile": { "$ref": "#/definitions/profile" },
		"steps": { "$ref": "#/definitions/steps" }
	}
}
